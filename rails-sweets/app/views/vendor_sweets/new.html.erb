<h1>VS New</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style="color: red"><%= error %></p>
  <% end %>
<% end %>

<%= form_for  @vendor_sweet do |f| %>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <%= f.collection_select :vendor_id, @vendors, :id, :name %>
  <%= f.collection_select :sweet_id, @sweets, :id, :name %>
  <%= f.submit %>
<% end %>
