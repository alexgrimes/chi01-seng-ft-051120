<h1>Create a new sweet and assign to a vendor</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style="color: red"><%= error %></p>
  <% end %>
<% end %>

<%= form_for @sweet do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= label :vendor_sweet, :price %>
  <%= number_field :vendor_sweet, :price %>
  <%= collection_select :vendor_sweet, :vendor_id, @vendors, :id, :name %>
  <%= f.submit %>

<% end %>
